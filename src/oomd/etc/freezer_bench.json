{
    "rulesets": [
        {
            "name": "test freezer",
            "detectors": [
                [
                    "memory above 10% for 1 second",
                    {
                        "name": "memory_above",
                        "args": {
                            "cgroup": "bench.slice",
                            "threshold": "10%",
                            "duration": "1"
                        }
                    }
                ]
            ],
            "actions": [
                {
                    "name": "freeze",
                    "args": {
                        "cgroup": "bench.slice/bench-nas.slice"
                    }
                },
                {
                    "name": "unfreeze",
                    "args": {
                        "cgroup": "freezer/my_freezer",
                        "monitor_cgroup": "bench.slice",
                        "mem_to_unfreeze_in_precentage": "20"
                    }
                }
            ]
        }
    ]
}